            "options": [
                "Filaire",
                "Sans fil (DECT)",
                "Standard de bureau",
                "Téléphone de conférence",
                "Autre"
            ]
        },
        {
            "name": "features",
            "label": "Caractéristiques",
            "type": "checkbox",
