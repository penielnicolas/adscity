{
    "slug": "music",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Guitare acoustique Yamaha F310 | Piano Roland FP-30",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "instrumentType",
            "label": "Type d’instrument",
            "type": "select",
            "required": true,
            "options": [
                "Guitare",
                "Piano / Clavier",
                "Batterie / Percussion",
                "Instrument à vent",
                "Violon / Cordes",
                "Microphone / Audio",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : Yamaha, Fender, Roland"
        },
        {
            "name": "model",
            "label": "Modèle",
            "type": "text",
            "placeholder": "Ex : Stratocaster, FP-30"
        },
        {
            "name": "condition",
            "label": "État",
            "type": "select",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "À réparer / Pour pièces"
            ]
        },
        {
            "name": "accessories",
            "label": "Accessoires inclus",
            "type": "checkbox-group",
            "options": [
                "Étui / Housse",
                "Câbles",
                "Support",
                "Amplificateur",
                "Autre"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 250000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez plus de détails : état, accessoires, historique, idéal pour débutant ou professionnel...",
            "required": true,
            "minLength": 40
        }
    ]
}