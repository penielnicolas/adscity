{
    "slug": "house-rent",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex: Maison 4 pièces à Riviera Palmeraie",
            "required": true,
            "maxLength": 100
        },
        {
            "name": "propertyType",
            "label": "Type de bien",
            "type": "select",
            "required": true,
            "options": [
                "Maison individuelle",
                "Maison jumelée",
                "Maison de ville",
                "Duplex",
                "Villa",
                "Bungalow",
                "Autre"
            ]
        },
        {
            "name": "bedrooms",
            "label": "Chambres",
            "type": "number",
            "min": 0,
            "max": 30,
            "required": true
        },
        {
            "name": "bathrooms",
            "label": "Salles de bain",
            "type": "number",
            "min": 0,
            "max": 30,
            "required": true
        },
        {
            "name": "surface",
            "label": "Surface habitable (m²)",
            "type": "number",
            "placeholder": "Ex: 120",
            "required": true
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "options": [
                "Neuf",
                "Rénové",
                "Bon état",
                "À rénover"
            ],
            "required": true
        },
        {
            "name": "furnishing",
            "label": "Meublé",
            "type": "radio",
            "required": false,
            "options": [
                "Oui",
                "Non",
                "Partiellement"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "type": "select",
            "options": [
                "Par mois",
                "Par semaine",
                "Par jour",
                "Négociable"
            ],
            "required": true
        },
        {
            "name": "rentPrice",
            "label": "Montant du loyer",
            "type": "number",
            "placeholder": "Ex: 25000",
            "min": 0,
            "required": true
        },
        {
            "name": "deposit",
            "label": "Dépôt de garantie",
            "type": "number",
            "placeholder": "Ex: 500000",
            "min": 0,
            "required": false
        },
        {
            "name": "chargesIncluded",
            "label": "Charges incluses ?",
            "type": "checkbox",
            "options": [
                "Eau",
                "Électricité",
                "Internet",
                "Autres"
            ]
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez une description détaillée (quartier, proximité écoles, etc.)",
            "required": true
        }
    ]
}