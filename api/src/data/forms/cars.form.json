{
    "slug": "cars",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex: Toyota Corolla 2018 - Très bon état",
            "required": true,
            "maxLength": 120
        },
        {
            "type": "select",
            "label": "Constructeur / Marque",
            "name": "make",
            "placeholder": "Ex: Toyota, BMW, Mercedes...",
            "options": [],
            "required": true
        },
        {
            "name": "model",
            "label": "Modèle",
            "type": "text",
            "placeholder": "Ex: Corolla, Civic",
            "required": true
        },
        {
            "name": "trim",
            "label": "Finition / Version",
            "type": "text",
            "placeholder": "Ex: GLI, SX, EX",
            "required": false
        },
        {
            "name": "year",
            "label": "Année",
            "type": "number",
            "min": 1900,
            "max": 2030,
            "required": true
        },
        {
            "name": "mileage",
            "label": "Kilométrage (km)",
            "type": "number",
            "unit": "km",
            "min": 0,
            "required": false
        },
        {
            "type": "select",
            "label": "Carburant",
            "name": "fuelType",
            "required": true,
            "options": [
                "Essence",
                "Diesel",
                "Hybride",
                "Hybride rechargeable",
                "Électrique"
            ]
        },
        {
            "name": "batteryCapacity",
            "label": "Capacité batterie (kWh)",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "electricRange",
            "label": "Autonomie (km) estimée",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "transmission",
            "label": "Boîte de vitesses",
            "type": "select",
            "required": true,
            "options": [
                "Manuelle",
                "Automatique",
                "CVT"
            ]
        },
        {
            "name": "engineSize",
            "label": "Cylindrée (cc)",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "power",
            "label": "Puissance (ch/kW)",
            "type": "text",
            "placeholder": "Ex: 120 ch / 88 kW",
            "required": false
        },
        {
            "name": "doors",
            "label": "Portes",
            "type": "number",
            "min": 1,
            "max": 6,
            "required": false
        },
        {
            "name": "seats",
            "label": "Places",
            "type": "number",
            "min": 1,
            "max": 12,
            "required": false
        },
        {
            "name": "drivetrain",
            "label": "Traction / Transmission",
            "type": "select",
            "required": false,
            "options": [
                "Traction avant",
                "Propulsion",
                "4x4 / AWD"
            ]
        },
        {
            "name": "color",
            "label": "Couleur extérieure",
            "type": "text",
            "required": false
        },
        {
            "name": "interiorColor",
            "label": "Couleur intérieur",
            "type": "text",
            "required": false
        },
        {
            "name": "vin",
            "label": "N° VIN (17 caractères)",
            "type": "text",
            "placeholder": "Ex: JTDKB20U793048123",
            "required": false,
            "validation": {
                "pattern": "^[A-HJ-NPR-Z0-9]{17}$",
                "message": "Le VIN doit contenir 17 caractères alphanumériques (sans I, O, Q)."
            }
        },
        {
            "name": "registrationNumber",
            "label": "Immatriculation / Plaque",
            "type": "text",
            "required": false
        },
        {
            "name": "firstRegistrationDate",
            "label": "1ère immatriculation",
            "type": "date",
            "required": false
        },
        {
            "name": "owners",
            "label": "Nombre de propriétaires précédents",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "serviceHistory",
            "label": "Historique d'entretien",
            "type": "checkbox",
            "required": false,
            "options": [
                "Carnet complet / toutes factures",
                "Partiel",
                "Aucun"
            ]
        },
        {
            "name": "serviceNotes",
            "label": "Précisions entretien",
            "type": "textarea",
            "required": true
        },
        {
            "name": "sellerType",
            "label": "Type de vendeur",
            "type": "select",
            "required": true,
            "options": [
                "Particulier",
                "Professionnel / Concessionnaire"
            ]
        },
        {
            "name": "warranty",
            "label": "Garantie",
            "type": "checkbox",
            "required": false,
            "options": [
                "Constructeur",
                "Garantie vendeur",
                "Aucune"
            ]
        },
        {
            "name": "warrantyPeriod",
            "label": "Durée garantie (mois)",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "features",
            "label": "Options & équipements",
            "type": "checkbox",
            "required": false,
            "options": [
                "Climatisation",
                "ABS",
                "Airbags",
                "Régulateur de vitesse",
                "Capteurs de recul / Stationnement",
                "Caméra de recul",
                "Bluetooth / Connectivité",
                "Sièges cuir",
                "Toit ouvrant / Panoramique",
                "Sièges chauffants",
                "GPS / Navigation",
                "Autre"
            ]
        },
        {
            "name": "documents",
            "label": "Documents disponibles",
            "type": "checkbox",
            "required": false,
            "options": [
                "Carte grise",
                "Assurance",
                "Contrôle technique",
                "Manuels / Factures",
                "Autre"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Occasion",
                "Occasion certifiée (garantie)",
                "Épave / À réparer"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Enchères",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 35000000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Détails supplémentaires, défauts, historique, raisons de la vente, etc.",
            "required": true
        }
    ]
}