{
    "slug": "sports",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : VTT tout terrain, haltères 20kg, tapis de course",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "sportType",
            "label": "Type de sport / activité",
            "type": "select",
            "required": true,
            "options": [
                "Fitness & Musculation",
                "Cyclisme",
                "Running / Marche",
                "Sports collectifs (football, basket, etc.)",
                "Sports de raquette (tennis, badminton, etc.)",
                "Arts martiaux & Sports de combat",
                "Sports nautiques",
                "Loisirs & Outdoor (randonnée, camping, etc.)",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : Adidas, Nike, Decathlon, Domyos"
        },
        {
            "name": "size",
            "label": "Taille / Dimensions",
            "type": "text",
            "placeholder": "Ex : Taille L, 28 pouces, 180x60 cm"
        },
        {
            "name": "deliveryMethod",
            "label": "Mode de remise",
            "type": "checkbox-group",
            "options": [
                "Remise en main propre",
                "Livraison par coursier",
                "Expédition"
            ]
        },
        {
            "name": "condition",
            "label": "État de l’article",
            "type": "select",
            "required": true,
            "options": [
                "Neuf",
                "Très bon état",
                "Bon état",
                "Usé / À réparer"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 250000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez des détails sur l’article, son utilisation, son état, etc.",
            "required": true,
            "minLength": 30
        }
    ]
}