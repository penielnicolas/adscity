{
    "slug": "toys",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex : Jeu de construction LEGO complet",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "listingType",
            "label": "Type d'annonce",
            "type": "select",
            "required": true,
            "options": [
                "Vente",
                "Échange",
                "Don / Gratuit"
            ]
        },
        {
            "name": "toyType",
            "label": "Type de jouet",
            "type": "select",
            "required": true,
            "options": [
                "Éducatif",
                "Jeu de construction",
                "Poupée / Figurine",
                "Véhicule miniature",
                "Jeu de société",
                "Jeu électronique",
                "Peluche",
                "Jeu d’extérieur",
                "Autre"
            ]
        },
        {
            "name": "ageRange",
            "label": "Âge conseillé",
            "type": "select",
            "required": true,
            "options": [
                "0 - 12 mois",
                "1 - 3 ans",
                "4 - 6 ans",
                "7 - 10 ans",
                "11 - 14 ans",
                "15 ans et +"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : LEGO, Playmobil, Barbie",
            "required": false
        },
        {
            "name": "material",
            "label": "Matière",
            "type": "text",
            "placeholder": "Ex : Plastique, Bois, Tissu",
            "required": false
        },
        {
            "name": "deliveryAvailable",
            "label": "Livraison disponible ?",
            "type": "radio",
            "required": true,
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf emballé",
                "Comme neuf",
                "Bon état",
                "Usagé"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 10000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Ajoute des détails : état, âge conseillé, accessoires inclus, etc.",
            "required": true,
            "minLength": 20
        }
    ]
}