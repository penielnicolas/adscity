{
    "slug": "fresh-products",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Mangues fraîches, poissons, légumes bio",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "productType",
            "label": "Type de produit",
            "type": "select",
            "required": true,
            "options": [
                "Fruits",
                "Légumes",
                "Viande",
                "Poissons & Fruits de mer",
                "Produits laitiers",
                "Autre"
            ]
        },
        {
            "name": "quantity",
            "label": "Quantité / Poids",
            "type": "text",
            "placeholder": "Ex : 5 kg, 10 pièces, 1 caisse"
        },
        {
            "name": "origin",
            "label": "Origine du produit",
            "type": "text",
            "placeholder": "Ex : Côte d’Ivoire, Local, Importé"
        },
        {
            "name": "organic",
            "label": "Produit bio",
            "type": "radio",
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "deliveryMethod",
            "label": "Mode de remise",
            "type": "checkbox-group",
            "options": [
                "Remise en main propre",
                "Livraison locale",
                "Expédition (selon produit)"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 250000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez des détails sur la fraîcheur, la qualité, la provenance, etc.",
            "required": true,
            "minLength": 30
        }
    ]
}