{
    "slug": "art",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Tableau abstrait, sculpture en bois, poterie artisanale",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "artType",
            "label": "Type d'art ou artisanat",
            "type": "select",
            "required": true,
            "options": [
                "Peinture",
                "Sculpture",
                "Poterie / Céramique",
                "Artisanat (textile, bois, métal, etc.)",
                "Autre"
            ]
        },
        {
            "name": "material",
            "label": "Matériaux utilisés",
            "type": "text",
            "placeholder": "Ex : Bois, Toile, Acrylique, Argile"
        },
        {
            "name": "dimensions",
            "label": "Dimensions",
            "type": "text",
            "placeholder": "Ex : 40cm x 60cm x 2cm"
        },
        {
            "name": "deliveryMethod",
            "label": "Mode de remise",
            "type": "checkbox-group",
            "options": [
                "Remise en main propre",
                "Livraison par coursier",
                "Expédition"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 250000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez des détails sur l'œuvre, l'artiste, l'état, l'histoire, etc.",
            "required": true,
            "minLength": 30
        }
    ]
}