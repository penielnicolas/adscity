{
    "slug": "repair",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Réparation de plomberie | Électricien disponible | Menuiserie sur mesure",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "serviceType",
            "label": "Type de service",
            "type": "select",
            "required": true,
            "options": [
                "Plomberie",
                "Électricité",
                "Menuiserie",
                "Peinture",
                "Réparation électroménager",
                "Bricolage / Petits travaux",
                "Autre"
            ]
        },
        {
            "name": "experience",
            "label": "Expérience (en années)",
            "type": "number",
            "min": 0,
            "placeholder": "Ex : 5"
        },
        {
            "name": "availability",
            "label": "Disponibilités",
            "type": "tags",
            "placeholder": "Ex : Lundi - Samedi | 24h/24 | Week-end uniquement"
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "type": "select",
            "options": [
                "Prix fixe (par prestation)",
                "Tarif horaire",
                "Sur devis",
                "À négocier"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix (si applicable)",
            "type": "number",
            "min": 0
        },
        {
            "name": "location",
            "label": "Zone d’intervention",
            "type": "location",
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Décrivez vos services, compétences et spécialités (plomberie, électricité, bricolage, etc.)",
            "required": true,
            "minLength": 50
        }
    ]
}