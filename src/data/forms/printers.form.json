{
    "slug": "printers",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex: Imprimante HP LaserJet Pro MFP M28a",
            "required": true,
            "maxLength": 120
        },
        {
            "name": "itemType",
            "label": "Type d'article",
            "type": "select",
            "required": true,
            "options": [
                "Imprimante",
                "Scanner",
                "Imprimante multifonction",
                "Accessoire (cartouches, toner, câbles...)"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "placeholder": "Ex: HP, Canon, Epson, Brother, Samsung, Xeros...",
            "type": "text",
            "required": true
        },
        {
            "name": "model",
            "label": "Modèle",
            "type": "text",
            "placeholder": "Ex: EcoTank L3250, LaserJet 107w",
            "required": false
        },
        {
            "name": "technology",
            "label": "Technologie d’impression",
            "type": "select",
            "required": false,
            "options": [
                "Jet d’encre",
                "Laser",
                "Thermique",
                "Matricielle"
            ]
        },
        {
            "name": "features",
            "label": "Fonctionnalités",
            "type": "checkbox",
            "required": false,
            "options": [
                "Wi-Fi",
                "Bluetooth",
                "Impression recto-verso",
                "Couleur",
                "Noir & blan uniquement",
                "Fonction scanner",
                "Fonction photocopie",
                "Fonction fax",
                "Autre"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Occasion"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 85000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Ajoutez plus de détails : vitesse d’impression, connectivité, cartouches/toners compatibles, état général...",
            "required": true
        }
    ]
}