{
    "slug": "kitchen",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex : Service de vaisselle complet en porcelaine",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "listingType",
            "label": "Type d'annonce",
            "type": "select",
            "required": true,
            "options": [
                "Vente",
                "Location",
                "Échange",
                "Gratuit"
            ]
        },
        {
            "name": "kitchenType",
            "label": "Type de produit",
            "type": "select",
            "required": true,
            "options": [
                "Batterie de cuisine",
                "Vaisselle",
                "Ustensiles",
                "Petit électroménager",
                "Meubles de cuisine",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque / Fabricant",
            "type": "text",
            "placeholder": "Ex : Tefal, Moulinex, IKEA",
            "required": false
        },
        {
            "name": "material",
            "label": "Matériau principal",
            "type": "select",
            "required": false,
            "options": [
                "Bois",
                "Métal",
                "Verre",
                "Plastique",
                "Céramique / Porcelaine",
                "Autre"
            ]
        },
        {
            "name": "dimensions",
            "label": "Dimensions / Volume",
            "type": "group",
            "required": false,
            "fields": [
                {
                    "name": "length",
                    "label": "Longueur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "width",
                    "label": "Largeur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "height",
                    "label": "Hauteur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "weight",
                    "label": "Poids (kg)",
                    "type": "number",
                    "min": 0,
                    "step": 0.1
                }
            ]
        },
        {
            "name": "quantity",
            "label": "Quantité disponible",
            "type": "number",
            "min": 1,
            "default": 1,
            "required": false
        },
        {
            "name": "deliveryAvailable",
            "label": "Livraison disponible ?",
            "type": "radio",
            "required": true,
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "warranty",
            "label": "Garantie",
            "type": "select",
            "required": false,
            "options": [
                "Aucune",
                "Constructeur",
                "Vendeur",
                "Autre"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "Usagé",
                "À réparer"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 15000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Décris l'état, accessoires inclus, usage, notes importantes...",
            "required": true,
            "minLength": 20
        }
    ]
}