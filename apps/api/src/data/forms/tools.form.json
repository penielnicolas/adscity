{
    "slug": "tools",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Perceuse Bosch Pro | Scie circulaire Makita | Tournevis électrique",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "toolType",
            "label": "Type de machine / outil",
            "type": "select",
            "required": true,
            "options": [
                "Scies",
                "Meuleuses / Ponceuses",
                "Compresseurs",
                "Groupes électrogènes",
                "Outils manuels",
                "Outils de chantier",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : Bosch, Makita, Dewalt"
        },
        {
            "name": "model",
            "label": "Modèle / Référence",
            "type": "text",
            "placeholder": "Ex : Bosch GSR 12V-15, Makita HS7601"
        },
        {
            "name": "powerSource",
            "label": "Source d’alimentation",
            "type": "select",
            "options": [
                "Électrique (filaire)",
                "Batterie rechargeable",
                "Manuel",
                "Essence / Diesel"
            ]
        },
        {
            "name": "voltage",
            "label": "Tension / Puissance",
            "type": "text",
            "placeholder": "Ex : 220V, 18V, 2000W"
        },
        {
            "name": "delivery",
            "label": "Options",
            "type": "checkbox",
            "options": [
                "À récupérer sur place",
                "Livraison disponible"
            ]
        },
        {
            "name": "condition",
            "label": "État de l’équipement",
            "type": "select",
            "required": true,
            "options": [
                "Neuf",
                "Occasion",
                "Révisé / Remis à neuf"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "type": "select",
            "required": true,
            "options": [
                "Fixe",
                "Négociable",
                "Sur devis"
            ]
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "min": 0
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Ajoutez des détails : état, accessoires fournis, spécifications techniques, garantie éventuelle...",
            "required": true,
            "minLength": 50
        }
    ]
}