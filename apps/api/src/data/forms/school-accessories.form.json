{
    "slug": "school-accessories",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex : Sac à dos Spiderman pour enfant",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "listingType",
            "label": "Type d'annonce",
            "type": "select",
            "required": true,
            "options": [
                "Vente",
                "Échange",
                "Don / Gratuit"
            ]
        },
        {
            "name": "itemType",
            "label": "Type accessoire",
            "type": "select",
            "required": true,
            "options": [
                "Sac à dos",
                "Trousse",
                "Fournitures (stylos, règles, etc.)",
                "Boîte à repas",
                "Gourde",
                "Uniforme scolaire",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : Nike, Eastpak, Tupperware",
            "required": false
        },
        {
            "name": "color",
            "label": "Couleur",
            "type": "text",
            "placeholder": "Ex : Bleu, Rouge, Multicolore",
            "required": false
        },
        {
            "name": "material",
            "label": "Matière",
            "type": "text",
            "placeholder": "Ex : Coton, Polyester, Plastique",
            "required": false
        },
        {
            "name": "ageGroup",
            "label": "Âge conseillé",
            "type": "select",
            "required": true,
            "options": [
                "Maternelle",
                "Primaire",
                "Collège / Lycée",
                "Université"
            ]
        },
        {
            "name": "deliveryAvailable",
            "label": "Livraison disponible ?",
            "type": "radio",
            "required": true,
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "Usagé"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 10000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Ajoute des détails : état, marque, taille, âge conseillé, etc.",
            "required": true,
            "minLength": 20
        }
    ]
}