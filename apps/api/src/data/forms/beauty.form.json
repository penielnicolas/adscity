{
    "slug": "beauty",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Coiffure à domicile | Massage relaxant | Soins esthétiques",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "serviceType",
            "label": "Type de prestation",
            "type": "select",
            "required": true,
            "options": [
                "Coiffure",
                "Maquillage",
                "Massage / Spa",
                "Manucure / Pédicure",
                "Soins visage / peau",
                "Coaching fitness / bien-être",
                "Autre"
            ]
        },
        {
            "name": "experience",
            "label": "Expérience (en années)",
            "type": "number",
            "min": 0,
            "placeholder": "Ex : 3"
        },
        {
            "name": "availability",
            "label": "Disponibilités",
            "type": "tags",
            "placeholder": "Ex : Lundi - Dimanche | Week-end uniquement | Sur rendez-vous"
        },
        {
            "name": "priceType",
            "label": "Type de tarif",
            "type": "select",
            "required": true,
            "options": [
                "Prix fixe (par prestation)",
                "Tarif horaire",
                "Forfait (ex: 5 séances)",
                "À négocier"
            ]
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "min": 0
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Décrivez vos services : type de prestation (coiffure, massage, maquillage, soins...), techniques utilisées, expérience, spécificités.",
            "required": true,
            "minLength": 50
        }
    ]
}