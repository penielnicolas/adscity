{
    "slug": "apartments",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex: Appartement 3 pièces moderne à Cocody",
            "required": true,
            "maxLength": 100
        },
        {
            "name": "surface",
            "label": "Surface habitable (m²)",
            "type": "number",
            "placeholder": "Ex: 120",
            "min": 0,
            "required": true
        },
        {
            "name": "rooms",
            "label": "Nombre de pièces",
            "type": "number",
            "placeholder": "Ex: 3",
            "min": 0,
            "required": true
        },
        {
            "name": "bedrooms",
            "label": "Nombre de chambres",
            "type": "number",
            "placeholder": "Ex: 2",
            "min": 0,
            "required": true
        },
        {
            "name": "bathrooms",
            "label": "Nombre de salles de bains",
            "type": "number",
            "placeholder": "Ex: 2",
            "min": 0,
            "required": true
        },
        {
            "name": "floor",
            "label": "Étage",
            "type": "number",
            "placeholder": "Ex: 4",
            "required": false
        },
        {
            "name": "furnished",
            "label": "Meublé ?",
            "type": "radio",
            "options": [
                "Oui",
                "Non",
                "Partiellement"
            ],
            "required": true
        },
        {
            "name": "amenities",
            "label": "Commodités / Équipements",
            "type": "checkbox",
            "options": [
                "Balcon / Terrasse",
                "Climatisation",
                "Ascenseur",
                "Parking",
                "Sécurité",
                "Groupe électrogène",
                "Eau courante",
                "Autre"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "type": "select",
            "options": [
                "Prix de vente",
                "Loyer mensuel",
                "Loyer hebdomadaire",
                "Loyer journalier",
                "Négociable"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 150000",
            "min": 0,
            "required": true
        },
        {
            "name": "deposit",
            "label": "Dépôt de garantie",
            "type": "number",
            "placeholder": "Ex: 300000",
            "min": 0,
            "required": false
        },
        {
            "name": "availability",
            "label": "Disponibilité",
            "type": "date",
            "placeholder": "À partir du..."
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez une description détaillée (quartier, proximité, confort, etc.)",
            "required": true
        }
    ]
}