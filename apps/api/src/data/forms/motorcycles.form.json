{
    "slug": "motorcycles",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex: Yamaha MT-07 2019 - Très bon état",
            "required": true,
            "maxLength": 120
        },
        {
            "type": "select",
            "label": "Constructeur / Marque",
            "name": "make",
            "placeholder": "Ex: Yamaha, Honda, Suzuki...",
            "options": [],
            "required": true
        },
        {
            "name": "model",
            "label": "Modèle",
            "type": "text",
            "placeholder": "Ex: CBR 500R, Tmax 530",
            "required": true
        },
        {
            "name": "year",
            "label": "Année",
            "type": "number",
            "min": 1950,
            "max": 2030,
            "required": true
        },
        {
            "name": "mileage",
            "label": "Kilométrage (km)",
            "type": "number",
            "unit": "km",
            "min": 0,
            "required": false
        },
        {
            "type": "select",
            "label": "Carburant",
            "name": "fuelType",
            "required": true,
            "options": [
                "Essence",
                "Hybride",
                "Électrique"
            ]
        },
        {
            "name": "batteryCapacity",
            "label": "Capacité batterie (kWh)",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "electricRange",
            "label": "Autonomie (km)",
            "type": "number",
            "min": 0,
            "required": false
        },
        {
            "name": "engineCapacity",
            "label": "Cylindrée (cc)",
            "type": "number",
            "min": 50,
            "max": 2000,
            "required": true
        },
        {
            "name": "power",
            "label": "Puissance (ch/kW)",
            "type": "text",
            "placeholder": "Ex: 47 ch / 35 kW",
            "required": false
        },
        {
            "name": "transmission",
            "label": "Boîte de vitesses",
            "type": "select",
            "required": true,
            "options": [
                "Manuelle",
                "Automatique (CVT)",
                "Semi-automatique"
            ]
        },
        {
            "name": "starter",
            "label": "Démarrage",
            "type": "radio",
            "required": false,
            "options": [
                "Électrique",
                "Kick",
                "Les deux"
            ]
        },
        {
            "name": "color",
            "label": "Couleur",
            "type": "text",
            "required": false
        },
        {
            "name": "vin",
            "label": "N° VIN / Châssis",
            "type": "text",
            "placeholder": "Ex: JYARJ18E5DA123456",
            "required": false,
            "validation": {
                "pattern": "^[A-HJ-NPR-Z0-9]{11,17}$",
                "message": "Le N° de série doit avoir 11 à 17 caractères alphanumériques valides."
            }
        },
        {
            "name": "features",
            "label": "Options & équipements",
            "type": "checkbox",
            "required": false,
            "options": [
                "ABS",
                "Contrôle de traction",
                "Pare-brise",
                "Valises latérales",
                "Top case",
                "GPS",
                "Prise USB",
                "Poignées chauffantes",
                "Autre"
            ]
        },
        {
            "name": "documents",
            "label": "Documents disponibles",
            "type": "checkbox",
            "required": false,
            "options": [
                "Carte grise",
                "Assurance",
                "Contrôle technique",
                "Manuels / Factures",
                "Autre"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Occasion",
                "À réparer"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Enchères",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 1500000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Ajoutez des détails sur l'état, l'entretien, les accessoires, etc.",
            "required": true
        }
    ]
}