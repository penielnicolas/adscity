{
    "slug": "drinks",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l’annonce",
            "type": "text",
            "placeholder": "Ex : Jus d’orange bio, Eau minérale 1.5L, Pack de bières",
            "required": true,
            "maxLength": 140
        },
        {
            "key": "drinkType",
            "label": "Type de boisson",
            "type": "select",
            "required": true,
            "options": [
                "Eaux minérales",
                "Jus & Boissons fruitées",
                "Sodas & Boissons gazeuses",
                "Boissons alcoolisées",
                "Boissons énergétiques",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque",
            "type": "text",
            "placeholder": "Ex : Coca-Cola, Fanta, Orangina, Castel"
        },
        {
            "name": "packaging",
            "label": "Conditionnement",
            "type": "select",
            "options": [
                "Bouteille",
                "Canette",
                "Pack (6, 12, 24…)",
                "Carton"
            ]
        },
        {
            "name": "expirationDate",
            "label": "Date de péremption",
            "type": "date"
        },
        {
            "name": "alcoholPercentage",
            "label": "Teneur en alcool (%)",
            "type": "number",
            "min": 0,
            "max": 100,
            "step": 0.1
        },
        {
            "name": "deliveryMethod",
            "label": "Mode de remise",
            "type": "checkbox-group",
            "options": [
                "Remise en main propre",
                "Livraison locale",
                "Expédition"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 250000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description",
            "type": "textarea",
            "placeholder": "Ajoutez des détails sur la boisson, la saveur, la provenance, etc.",
            "required": true,
            "minLength": 30
        }
    ]
}