{
    "slug": "furniture",
    "fields": [
        {
            "name": "title",
            "label": "Titre de l'annonce",
            "type": "text",
            "placeholder": "Ex : Canapé 3 places en cuir - Très bon état",
            "required": true,
            "maxLength": 140
        },
        {
            "name": "listingType",
            "label": "Type d'annonce",
            "type": "select",
            "required": true,
            "options": [
                "Vente",
                "Location",
                "Échange",
                "Gratuit"
            ]
        },
        {
            "name": "furnitureType",
            "label": "Type de meuble",
            "type": "select",
            "required": true,
            "options": [
                "Canapé / Sofa",
                "Lit",
                "Table",
                "Chaise",
                "Armoire / Placard",
                "Commode",
                "Étagère",
                "Meuble TV",
                "Dressing",
                "Autre"
            ]
        },
        {
            "name": "brand",
            "label": "Marque / Fabricant",
            "type": "text",
            "placeholder": "Ex : IKEA, Roche Bobois, artisan local",
            "required": false
        },
        {
            "name": "material",
            "label": "Matériau principal",
            "type": "select",
            "required": false,
            "options": [
                "Bois",
                "Métal",
                "Verre",
                "Plastique",
                "Tissu / Revêtement",
                "Cuir",
                "Autre"
            ]
        },
        {
            "name": "dimensions",
            "label": "Dimensions (L×P×H cm)",
            "type": "group",
            "required": false,
            "fields": [
                {
                    "name": "length",
                    "label": "Longueur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "depth",
                    "label": "Profondeur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "height",
                    "label": "Hauteur (cm)",
                    "type": "number",
                    "min": 0
                },
                {
                    "name": "weight",
                    "label": "Poids (kg)",
                    "type": "number",
                    "min": 0,
                    "step": 0.1
                }
            ]
        },
        {
            "name": "color",
            "label": "Couleur principale",
            "type": "text",
            "placeholder": "Ex : Gris anthracite, Bois naturel",
            "required": false
        },
        {
            "name": "quantity",
            "label": "Quantité disponible",
            "type": "number",
            "min": 1,
            "default": 1,
            "required": false
        },
        {
            "name": "assemblyRequired",
            "label": "Montage nécessaire ?",
            "type": "radio",
            "required": false,
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "assemblyService",
            "label": "Service de montage disponible ?",
            "type": "select",
            "required": false,
            "options": [
                "Non",
                "Le vendeur propose",
                "Service tiers (frais supplémentaires)"
            ]
        },
        {
            "name": "deliveryAvailable",
            "label": "Livraison disponible ?",
            "type": "radio",
            "required": true,
            "options": [
                "Oui",
                "Non"
            ]
        },
        {
            "name": "warranty",
            "label": "Garantie",
            "type": "select",
            "required": false,
            "options": [
                "Aucune",
                "Constructeur",
                "Vendeur",
                "Autre"
            ]
        },
        {
            "name": "condition",
            "label": "État",
            "type": "radio",
            "required": true,
            "options": [
                "Neuf",
                "Comme neuf",
                "Bon état",
                "Usagé",
                "À réparer"
            ]
        },
        {
            "name": "priceType",
            "label": "Type de prix",
            "placeholder": "Prix négociable",
            "type": "select",
            "options": [
                "Fixe",
                "Négociable",
                "À partir de"
            ],
            "required": true
        },
        {
            "name": "price",
            "label": "Prix",
            "type": "number",
            "placeholder": "Ex: 75000",
            "min": 0,
            "required": true
        },
        {
            "name": "description",
            "label": "Description détaillée",
            "type": "textarea",
            "placeholder": "Décris l'état, l'historique, accessoires inclus, notes sur l'utilisation...",
            "required": true,
            "minLength": 20 
        }
    ]
}